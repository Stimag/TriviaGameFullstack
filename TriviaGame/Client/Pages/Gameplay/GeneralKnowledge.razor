@page "/generalKnowledgeTrivia"
@inject NavigationManager NavigationManager
@inject Blazored.LocalStorage.ILocalStorageService localStorage
@inject TriviaService triviaService

<PageTitle>General knowledge trivia</PageTitle>
<Gameplay questions="generalKnowledgeQuestions" />

@code {
    private List<TriviaQuestion>? generalKnowledgeQuestions;

    protected override async Task OnInitializedAsync()
    {
        var pageId = "generalKnowledgeTrivia"; 
        await localStorage.SetItemAsync("lastPageId", pageId);

        generalKnowledgeQuestions = await triviaService.GetRandomQuestions();
    }
    
    
}
